<h1><%= @article.title %></h1>
<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= button_to "Delete post", article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %></li>
</ul>

<h2>Add a comment</h2>
<%= render "comments/form" %>

<h2>Comments</h2>
<%= render @article.comments %>
